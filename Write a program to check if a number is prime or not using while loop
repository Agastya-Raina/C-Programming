#include <stdio.h>

int main() {
    int num, i = 2;
    int flag = 1;  // Assume the number is prime

    // Take user input
    printf("Enter a number: ");
    scanf("%d", &num);

    // Handle case for numbers less than 2 (not prime)
    if (num <= 1) {
        printf("%d is not a prime number.\n", num);
        return 0;
    }

    // Use while loop to check if the number is divisible by any number other than 1 and itself
    while (i * i <= num) {
        if (num % i == 0) {
            flag = 0;  // Found a divisor, not a prime number
            break;        // No need to continue further
        }
        i++;
    }

    // Check result and print output
    if (flag) {
        printf("%d is a prime number.\n", num);
    } 
    else {
        printf("%d is not a prime number.\n", num);
    }

    return 0;
}
